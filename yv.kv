WindowManager:

    SecondWindow:
    MainWindow:
    FourthWindow:
    ThirdWindow:
    SixWindow:
    SeventhWindow:
    FifthWindow:
<MainWindow>:
    name: "main"
    n:n
    l:l
    e:e
    a:a
    FloatLayout:
        rows:2
        size:root.width,root.height

        FloatLayout:
            cols:2

            Label:
                text: "Reg No -:"
                size_hint:0.05,0.15
                pos_hint:{"x":0.3,"y":0.8}
            TextInput:
                size_hint:0.25,0.10
                pos_hint:{"x":0.5,"y":0.8}
                id: n
                multiline: False

            Label:
                text: " Gender -: "
                size_hint:0.05,0.15
                pos_hint:{"x":0.3,"y":0.6}
            TextInput:
                size_hint:0.25,0.10
                pos_hint:{"x":0.5,"y":0.6}
                id: l
                multiline: False


            Label:
                text: "Location -: "
                size_hint:0.05,0.15
                pos_hint:{"x":0.3,"y":0.4}
            TextInput:
                size_hint:0.25,0.10
                pos_hint:{"x":0.5,"y":0.4}
                id:e
                multiline: False


            Label:
                text: "Cremation Date -: "
                size_hint:0.05,0.15
                pos_hint:{"x":0.3,"y":0.2}
            TextInput:
                size_hint:0.25,0.10
                pos_hint:{"x":0.5,"y":0.2}
                id: a
                multiline: False


        Button:
            text: "Submit"
            size_hint:0.25,0.15
            pos_hint:{"x":0.2,"y":0}
            on_release:root.btn()

        Button:
            text: "Back"
            size_hint:0.25,0.1
            pos_hint:{"x":0.7,"y":0}
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"




<SecondWindow>:
    name: "second"

    FloatLayout:
        rows:3
        size:root.width,root.height
        Label:
            text:"Karma Portal For Unclaimed CORPSES"
            size_hint:0.8,0.3
            pos_hint:{"x":0.1,"y":0.7}
            font_size:40

        Button:
            text: "Volunteer"
            size_hint:0.25,0.15
            pos_hint:{"x":0.4,"y":0.6}
            on_release:
                app.root.current = "fourth"
                root.manager.transition.direction = "left"

        Button:
            text: "Deceased(for Claimed Body)"
            size_hint:0.25,0.15
            pos_hint:{"x":0.4,"y":0.35}
            on_release:
                app.root.current = "fifth"
                root.manager.transition.direction = "left"

        Button:
            text: "Unclaimed CORPSES"
            size_hint:0.25,0.15
            pos_hint:{"x":0.4,"y":0.1}
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "left"





<ThridWindow>:
    name: "third"

    FloatLayout:
        rows:2
        size:root.width,root.height
        Label:
            text:"Karma portal for unclaimed corpses"
            size_hint:0.8,0.3
            pos_hint:{"x":0.1,"y":0.3}


<FourthWindow>:
    name:"fourth"
    FloatLayout:
        rows:3
        size:root.width,root.height
        Label:
            text:"Volunteer"
            size_hint:0.8,0.3
            pos_hint:{"x":0.1,"y":0.7}
            font_size:40

        FloatLayout:
            cols:2
            Label:
                text: "Name -: "
                size_hint:0.05,0.15
                pos_hint:{"x":0.3,"y":0.5}
            TextInput:
                size_hint:0.25,0.10
                pos_hint:{"x":0.5,"y":0.5}
                id: n
                multiline: False

            Label:
                text: "Contact No -: "
                size_hint:0.05,0.15
                pos_hint:{"x":0.3,"y":0.2}
            TextInput:
                size_hint:0.25,0.10
                pos_hint:{"x":0.5,"y":0.2}
                id: l
                multiline: False

        Button:
            text: "Register"
            size_hint:0.25,0.1
            pos_hint:{"x":0,"y":0}

        Button:
            text: "Back"
            size_hint:0.25,0.1
            pos_hint:{"x":0.7,"y":0}
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"


<FifthWindow>:
    name:"fifth"
    FloatLayout:
        size:root.width,root.height
        cols:2

        Label:
            text:"Deceased"
            size_hint:0.5,0.3
            pos_hint:{"x":0.25,"y":0.7}
            font_size:50

        Button:
            text: "Condition of body"
            size_hint:0.25,0.1
            pos_hint:{"x":0.2,"y":0.5}
            on_release:
                app.root.current = "seven"
                root.manager.transition.direction = "right"

        Button:
            text: "Location of organization"
            size_hint:0.25,0.1
            pos_hint:{"x":0.6,"y":0.5}
            on_release:
                app.root.current = "sixth"
                root.manager.transition.direction = "left"
        Button:
            text: "Back"
            size_hint:0.25,0.1
            pos_hint:{"x":0.7,"y":0}
            on_release:
                app.root.current = "second"

<SixWindow>:
    name:"sixth"
    FloatLayout:
        size:root.width,root.height
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'yv.jpg'

        Button:
            text: "Back"
            size_hint:0.25,0.1
            pos_hint:{"x":0.7,"y":0.7}
            on_release:app.root.current = "second"

<SeventhWindow>:
    name:"seven"
    n:n
    l:l
    b:b
    FloatLayout:
        rows:2
        size:root.width,root.height

        FloatLayout:
            cols:2

            Label:
                text: "Name of the CORPSE -: "
                size_hint:0.05,0.15
                pos_hint:{"x":0.3,"y":0.8}
            TextInput:
                id:n
                size_hint:0.25,0.10
                pos_hint:{"x":0.5,"y":0.8}

                multiline: False

            Label:
                text: "Location of the CORPSE -:"
                size_hint:0.05,0.15
                pos_hint:{"x":0.3,"y":0.6}
            TextInput:
                id:l
                size_hint:0.25,0.10
                pos_hint:{"x":0.5,"y":0.6}

                multiline: False


            Label:
                text: "Belonging's of the CORPSE -:"
                size_hint:0.05,0.15
                pos_hint:{"x":0.3,"y":0.4}
            TextInput:
                id:b
                size_hint:0.25,0.10
                pos_hint:{"x":0.5,"y":0.4}

                multiline: False

    Button:
        text: "Submit"
        size_hint:0.25,0.1
        pos_hint:{"x":0.3,"y":0.1}
        on_release:
            root.btn()
            app.root.current = "second"

    Button:
        text: "Back"
        size_hint:0.25,0.1
        pos_hint:{"x":0.7,"y":0}
        on_release:app.root.current = "second"



